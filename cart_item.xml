<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    android:paddingRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_light_rect">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cartImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:src="@drawable/s9plus"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_medium"
                    android:id="@+id/cartItemTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:textColor="@color/txt_color"
                    android:text="Samsung Galaxy S9 Plus"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/cartItemOfferPriceTextView"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 30000"
                        android:textSize="13.3sp"
                        android:textColor="@color/red" />

                    <TextView
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offer1"
                        android:textColor="#a2a2a2"
                        android:textSize="12sp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/cartItemMrpTextView"/>

                    <TextView
                        android:id="@+id/cartItemOfferTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11.3sp"
                        android:text="-35%"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/offer_red_rect"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_count"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/size_red_rect">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:text="Qty :"/>

                    <TextView
                        android:id="@+id/cartItemQtyTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:paddingLeft="8.7dp"
                        android:paddingRight="8.7dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/red"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/cartDeleteItemImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"/>






        </LinearLayout>
    </LinearLayout>

</LinearLayout>