<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_product_list"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:text="Address"
                android:layout_marginLeft="19.5dp"
                android:textColor="@color/txt_color"
                />

            <EditText
                android:id="@+id/addressEditText"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/catagory_outline"
                android:hint="Enter your Address"
                android:minHeight="80dp"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:layout_marginLeft="19.5dp"
                android:textColorHint="#7137474f"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3c000000"
                android:layout_marginTop="7.2dp"
                android:layout_marginLeft="19.5dp"/>

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:text="Area"
                android:layout_marginLeft="19.5dp"
                android:textColor="@color/txt_color"
                />

            <EditText
                android:id="@+id/AreaEditText"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/catagory_outline"
                android:minHeight="40dp"
                android:textSize="12sp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="Enter your Area"
                android:layout_marginLeft="19.5dp"
                android:textColorHint="#7137474f"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3c000000"
                android:layout_marginTop="7.2dp"
                android:layout_marginLeft="19.5dp"/>

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:text="City"
                android:layout_marginLeft="19.5dp"
                android:textColor="@color/txt_color"
                />

            <EditText
                android:id="@+id/CityEditText"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/catagory_outline"
                android:minHeight="40dp"
                android:textSize="12sp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="Enter your City"
                android:layout_marginLeft="19.5dp"
                android:textColorHint="#7137474f"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3c000000"
                android:layout_marginTop="7.2dp"
                android:layout_marginLeft="19.5dp"/>

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:text="State"
                android:layout_marginLeft="19.5dp"
                android:textColor="@color/txt_color"
                />

            <EditText
                android:id="@+id/StateEditText"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/catagory_outline"
                android:minHeight="40dp"
                android:textSize="12sp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:hint="Enter your State"
                android:layout_marginLeft="19.5dp"
                android:textColorHint="#7137474f"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3c000000"
                android:layout_marginTop="7.2dp"
                android:layout_marginLeft="19.5dp"
                android:layout_marginRight="19.5dp"/>

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:text="Pincode"
                android:layout_marginLeft="19.5dp"
                android:textColor="@color/txt_color"
                />

            <EditText
                android:id="@+id/PincodeTextView"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/catagory_outline"
                android:minHeight="40dp"
                android:textSize="12sp"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:hint="Enter your Pincode"
                android:layout_marginLeft="19.5dp"
                android:textColorHint="#7137474f"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3c000000"
                android:layout_marginTop="7.2dp"
                android:layout_marginLeft="19.5dp"
                android:layout_marginRight="19.5dp"/>

        </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <TextView
        android:id="@+id/saveAddressButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_medium"
        android:text="Save"
        android:background="@color/red"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

</RelativeLayout>
