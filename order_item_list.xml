<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="8.5dp"
    android:layout_marginRight="8.5dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/white_light_rect"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:padding="15sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/roboto_medium"
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:textColor="@color/txt_color"
                android:text="Vigo Atom + Personal Air
                    conditioner, white color"/>


            <TextView
                android:id="@+id/item_Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:fontFamily="@font/roboto_medium"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="#8b8a8a"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_subcat"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#717171"
                    android:textSize="12sp"
                    android:text="4.6"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/item_price"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 20000"
                    android:layout_gravity="center"
                    android:textSize="13.3sp"
                    android:textColor="@color/red" />

                <TextView
                    android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offer"
                    android:textColor="#a2a2a2"
                    android:textSize="12sp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="right|center"
                    android:gravity="right"
                    android:id="@+id/item_mrp"/>


                <TextView
                    android:id="@+id/item_offerPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.3sp"
                    android:text="-35%"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/offer_red_rect"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:src="@drawable/ac"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
