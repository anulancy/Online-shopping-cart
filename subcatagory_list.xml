<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_weight="1"
    android:id="@+id/subcat_card"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/catagory_outline"
        android:layout_width="0dp"
        android:padding="15dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/subCatImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/grocery"/>

        <TextView
            android:id="@+id/subCatTitleTextView"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Launches"
            android:lines="2"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:id="@+id/subCatOfferTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UP TO 71% OFF"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/red"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>




</LinearLayout>